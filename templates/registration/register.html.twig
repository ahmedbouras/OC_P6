{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Inscription {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block body %}
{% for flashError in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}

<div class="container mt-5 mb-5">

    <div class="row mb-5 text-center">
        <h1 class="col-12">Inscription</h1>
    </div>
  
    {{ form_start(registrationForm) }}
    <div class="row d-flex justify-content-center text-center">
        <div class="bloc-fields col-6 pt-5 pb-5">
            
            <div class="row">
                <div class="form-group col-6 offset-3">
                    {{ form_row(registrationForm.username, {
                        label: 'Nom d\'utilisateur',
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6 offset-3">
                    {{ form_row(registrationForm.email, {
                        label: 'Email',
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
            </div>

            <div class="row">
                <div class="form-group col-6 offset-3">
                    {{ form_row(registrationForm.password, {
                        label: 'Mot de passe',
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
            </div>

            <div class="row">
                <div class="form-group col-6 offset-3">
                    {{ form_row(registrationForm.avatar, {
                        label: 'Image du profil',
                        'attr': {'class': 'form-control-file'}
                    }) }}
                    <small class="form-text text-muted">Optionnel (1024ko maximum).</small>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-secondary">Cr√©er un compte</button>
                </div>
            </div>
            
        </div>
    </div>
    {{ form_end(registrationForm) }}
</div>
    
{% endblock %}