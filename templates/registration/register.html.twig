{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Inscription 
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/formFrame.css') }}">
{% endblock %}

{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}

{% block body %}

<div class="container-fluid">
    <div class="row mb-5">
        <div class="offset-1 col-10 offset-lg-4 col-lg-4">

            <div class="row mt-3 mb-3 text-center">
                <h1 class="col-12">Inscription</h1>
            </div>
        
            {{ form_start(registrationForm) }}
                <div class="row d-flex justify-content-center text-center outline-bloc">
                    <div class="bloc-fields pt-4 pb-4 mb-4">
                        
                        <div class="row">
                            <div class="form-group offset-1 col-10 offset-lg-2 col-lg-8">
                                {{ form_row(registrationForm.username, {
                                    label: 'Nom d\'utilisateur',
                                }) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group offset-1 col-10 offset-lg-2 col-lg-8">
                                {{ form_row(registrationForm.email) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group offset-1 col-10 offset-lg-2 col-lg-8">
                                {{ form_row(registrationForm.password, {
                                    label: 'Mot de passe',
                                }) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group offset-1 col-10 offset-lg-2 col-lg-8">
                                {{ form_row(registrationForm.avatar, {
                                    label: 'Image de profil',
                                    help: 'Optionnel (1024ko maximum).',
                                }) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-secondary">Cr√©er un compte</button>
                            </div>
                        </div>
                        
                    </div>
                </div>
            {{ form_end(registrationForm) }}

        </div>
    </div>
</div>
    
{% endblock %}