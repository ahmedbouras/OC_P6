{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Se connecter
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/formFrame.css') }}">
{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<div class="container-fluid">
    <div class="row">
        <div class="offset-1 col-10 offset-lg-4 col-lg-4 main-bloc">

            <div class="row mt-5 mb-3 text-center">
                <h1 class="col-12">Se connecter</h1>
            </div>
        
            <div class="row d-flex justify-content-center text-center outline-bloc">
                <div class="pt-4 pb-4 mb-4">
                    
                    <div class="row">
                        <div class="form-group">
                            <label for="username">Nom d'utilisateur</label>
                            <input type="text" value="{{ last_username }}" name="username" id="username" class="form-control" required autofocus>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="password" id="password" class="form-control" required>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="row xs-to-lg">
                        <div class="col">
                            <p class="text-center"><a href="{{ path('app_register') }}">S'inscrire</a></p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <p class="text-center"><a href="{{ path('app_forgot_pass') }}">Mot de passe oublié ?</a></p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-secondary">Créer un compte</button>
                        </div>
                    </div>
                    
                </div>
            </div>

        </div>
    </div>
</div>
    
</form>
{% endblock %}
