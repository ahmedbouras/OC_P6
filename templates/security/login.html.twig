{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Se connecter{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/formFrame.css') }}">
{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container mt-5 container-login">

        <div class="row mb-5 text-center">
            <h1 class="col-12">Se connecter</h1>
        </div>
    
        <div class="row d-flex justify-content-center text-center">
            <div class="bloc-fields col-6 pt-4 pb-4">
                
                <div class="row">
                    <div class="form-group col-6 offset-3">
                        <label for="inputUsername">Nom d'utilisateur</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6 offset-3">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="row">
                    <div class="form-group col-6 offset-3">
                        <a href="{{ path('app_forgot_pass') }}">Mot de passe oublié ?</a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-secondary">Créer un compte</button>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
</form>
{% endblock %}
